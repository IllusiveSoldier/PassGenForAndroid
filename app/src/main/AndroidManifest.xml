<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.passgen.knack.PassGen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.passgen.knack.PassGen.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.passgen.knack.PassGen.ChildActivity"
            android:label="@string/child_activity_label"
            android:parentActivityName="com.passgen.knack.PassGen.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ChildActivityTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.passgen.knack.PassGen.MainActivity" />
        </activity>
    </application>

</manifest>